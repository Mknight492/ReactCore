{
  "parser": "pluggable-babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "plugins": ["typescript"]
  },
  "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "React": true,
    "google": true
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "import/no-unresolved": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["source"]
      }
    }
  }
}
